<div class="panel-group" id="accordion">
    <% @jugador.each do |jugador| %>
	  <div class="panel panel-default">
	    <!-- Cabecera del jugador -->
	    <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#jugador_details_collapsable_<%= jugador.id %>">
			<div class="row">
		        <div class="col-xs-4">
		        	<span class="glyphicon glyphicon-user"></span>
		        	<strong><%= jugador.nombre %></strong>
		        </div>
		        <div class="col-xs-2"><%= jugador.habilidad_actual %>
		        	<span class="glyphicon glyphicon-star"></span>
		        </div>
		        <div class="col-xs-2"><%= jugador.pais %></div>
		        <div class="col-xs-2"><%= jugador.edad %> a√±os</div>
		        <div class="col-xs-1 col-xs-offset-1">
					<button type="button" class="btn btn-success btn-xs">
						<span class="glyphicon glyphicon-screenshot"></span>
					</button>
			    </div>
			</div>
	    </div>
	    <!-- Detalle del jugador -->
	    <div id="jugador_details_collapsable_<%= jugador.id %>" class="panel-collapse collapse">
	      <div class="panel-body">
	        <!-- Renderizo el detalle de los jugadores -->
	        <%= render "show_details" %>
	      </div>
	    </div>
	  </div>
    <% end %>
</div>