<div class="container">
	<div class="row">
		<!-- Esta fila muestra el logo, un input para búsquedas por nombre con su botón y el botón para las opciones avanzadas -->
		<div class="col-xs-3">
			<!-- Logo -->
			<center>
				<%= image_tag('playerbase.png',width: '150') %>
			</center>
		</div>
		<div class="col-xs-7">
			<!-- Formulario con text input y botón de búsqueda -->
			<%= form_tag jugador_search_path, method: "get" do %>
			  	<div class="input-group">
				  <%= text_field_tag :query_name, @query_name, class: 'form-control' %>
				  <span class="input-group-btn">
					<%= button_tag type: 'submit', class: 'btn btn-primary' do %>						
					    <span class="glyphicon glyphicon-search"></span>
					<% end %>
				  </span>
				</div>
			<% end %>
		</div>
		<div class="col-xs-2">
			<!-- Botón para desplegar las opciones avanzadas -->
			<button type="button" class="btn btn-success" data-toggle="collapse" data-target="#advanced_search_collapsable">
				<span class="glyphicon glyphicon-screenshot icon-size-large"></span>
			    <span class="glyphicon glyphicon-chevron-down"></span>
			</button>
		</div>
	</div>
	<div class="row">
		<!-- Esta fila mostrará las opciones avanzadas -->
		<div class="col-xs-12">
			<div id="advanced_search_collapsable" class="collapse">
				<div class="row">
					<div class="col-xs-4">
						Velocidad: <input type="text" class="form-control" id="advanced1">
						Agresividad: <input type="text" class="form-control" id="advanced1">
						Agilidad: <input type="text" class="form-control" id="advanced1">
						Anticipación: <input type="text" class="form-control" id="advanced1">
					</div>
					<div class="col-xs-4">
						Velocidad: <input type="text" class="form-control" id="advanced1">
						Agresividad: <input type="text" class="form-control" id="advanced1">
						Agilidad: <input type="text" class="form-control" id="advanced1">
						Anticipación: <input type="text" class="form-control" id="advanced1">
					</div>
					<div class="col-xs-4">
						Velocidad: <input type="text" class="form-control" id="advanced1">
						Agresividad: <input type="text" class="form-control" id="advanced1">
						Agilidad: <input type="text" class="form-control" id="advanced1">
						Anticipación: <input type="text" class="form-control" id="advanced1">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<!-- Fila que muestra "Resultados para.. " o "Similares a.. " -->
	<div class="row">
		<div class="col-xs-12">
			<p class="text-muted">Resultados para <strong>"<%= @query_name %>"</strong> :</p>
		</div>
		<!-- <p class="text-muted">Similares a <strong>Lionel Messi</strong> :</p> -->
	</div>
	<!-- Esta fila muestra los resultados -->
	<div class="row">
		  <div id="resultados">
			<% if !(@warning_message.nil?) %>
			<%= render "warning" %>
			<% else %>
			<%= render "list" %>
			<% end %>
		  </div>
		</div>
	</div>
</div>